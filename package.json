{
  "name": "@macedo/neptune-plugins",
  "description": "Plugins for Neptune writtern by Macedo",
  "type": "module",
  "scripts": {
    "watch": "concurrently nodemon npm:serve",
    "build": "tsx build.ts",
    "serve": "serve -L -C ./dist"
  },
  "devDependencies": {
    "@types/clean-css": "^4.2.11",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/node": "^22.7.7",
    "clean-css": "^5.3.3",
    "concurrently": "^9.0.1",
    "electron": "^33.0.1",
    "esbuild": "^0.24.0",
    "html-minifier-terser": "^7.2.0",
    "neptune-types": "^1.0.1",
    "nodemon": "^3.1.7",
    "serve": "^14.2.4",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "nodemonConfig": {
    "watch": "./plugins/**",
    "ignore": "**/dist/**",
    "ext": "*",
    "exec": "npm run build"
  }
}
